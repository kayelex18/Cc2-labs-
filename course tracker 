import java.util.Scanner;  // Import ng Scanner para sa input ng user

public class CourseEnrollmentTracker {

    public static void main(String[] args) {

        // Constants para sa bilang ng mga mag-aaral at asignatura
        final int NUM_STUDENTS = 5;  // Bilang ng mga mag-aaral
        final int NUM_SUBJECTS = 3;  // Bilang ng mga asignatura

        // Paghahanda ng mga array para sa mga pangalan at grado
        String[] studentNames = new String[NUM_STUDENTS];  // Array para sa mga pangalan ng mag-aaral
        double[][] grades = new double[NUM_STUDENTS][NUM_SUBJECTS];  // 2D array para sa mga grado ng bawat mag-aaral

        Scanner scanner = new Scanner(System.in);  // Paglikha ng Scanner para sa input ng user

        // Pagkuha ng mga pangalan ng mag-aaral
        for (int i = 0; i < NUM_STUDENTS; i++) {
            System.out.print("Ilagay ang pangalan ng Mag-aaral " + (i + 1) + ": ");
            studentNames[i] = scanner.nextLine();  // Basahin ang pangalan ng mag-aaral mula sa input
        }

        // Pagkuha ng mga grado para sa bawat mag-aaral
        for (int i = 0; i < NUM_STUDENTS; i++) {
            System.out.println("Ilagay ang mga grado para kay " + studentNames[i] + ":");

            for (int j = 0; j < NUM_SUBJECTS; j++) {
                System.out.print("Grado para sa Asignatura " + (j + 1) + ": ");
                grades[i][j] = scanner.nextDouble();  // Basahin ang grado mula sa input
            }

            scanner.nextLine();  // Konsumahin ang newline character pagkatapos ng double input
        }

        // Kalkulahin at ipakita ang average na grado para sa bawat mag-aaral
        for (int i = 0; i < NUM_STUDENTS; i++) {
            double sum = 0.0;  // Variable para sa total ng grado ng mag-aaral

            for (int j = 0; j < NUM_SUBJECTS; j++) {
                sum += grades[i][j];  // I-sum ang mga grado ng mag-aaral
            }

            double average = sum / NUM_SUBJECTS;  // Kalkulahin ang average na grado
            System.out.printf("Average na grado para kay %s: %.2f%n", studentNames[i], average);  // Ipakita ang resulta
        }

        scanner.close();  // Isara ang Scanner upang i-release ang resources
    }
}
